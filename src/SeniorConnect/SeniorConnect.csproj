<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\SeniorConnect.API\SeniorConnect.API.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <PublishDir>$(OutputPath)publish\SeniorConnect\</PublishDir>
  </PropertyGroup>
  
  <ItemGroup>
    <None Remove="appsettings.json;appsettings.Development.json" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Update="appsettings.Development.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
