@page
@model SeniorConnect.Pages.profile.IndexModel
@{
    ViewData["Title"] = "Mijn profile";
}
<div class="container-xl px-4 mt-4">
    <div class="row">
        <div class="col-xl-4">
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                    <button class="btn btn-primary" type="button">Upload new image</button>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <div class="card mb-4">
                <div class="card-header">Account Details</div>
                <div class="card-body">
                    <form method="post">
                        <div class="row gx-3 mb-3">
                            <div class="col-md-12">
                                <label class="small mb-1" for="inputFirstName">Voornaam</label>
                                <input asp-for="UserInfoResponse.FirstName" class="form-control" id="firstname" type="text">
                                <span asp-validation-for="UserInfoResponse.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <label class="small mb-1" for="inputPreposition">Tussenvoegsel</label>
                                <input asp-for="UserInfoResponse.Preposition" class="form-control" id="preposition" type="text">
                                <span asp-validation-for="UserInfoResponse.Preposition" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label class="small mb-1" for="inputLastName">Achternaam</label>
                                <input asp-for="UserInfoResponse.LastName" class="form-control" id="lastname" type="text">
                                <span asp-validation-for="UserInfoResponse.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="small mb-1" for="inputEmailAddress">Email Address</label>
                            <input asp-for="UserInfoResponse.Email" class="form-control" id="email" type="email" readonly disabled>
                            <span asp-validation-for="UserInfoResponse.Email" class="text-danger"></span>
                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputPhone">Phone Number</label>
                                <input asp-for="UserInfoResponse.PhoneNumber" class="form-control" id="phone" type="tel">
                                <span asp-validation-for="UserInfoResponse.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>