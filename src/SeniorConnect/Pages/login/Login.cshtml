@page
@model SeniorConnect.Pages.login.LoginModel
@{
}

<div class="row justify-content-center">
    <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-3 p-md-4 p-xl-5">
                <div class="row">
                    <div class="col-12">
                        <div class="mb-5">
                            <h3>Inloggen</h3>
                        </div>
                    </div>
                </div>
                <form action="">
                    <div class="row gy-3 overflow-hidden">
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                                <label for="email" class="form-label">Email</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating mb-3 d-flex align-items-center">
                                <input type="password" class="form-control" name="password" id="password" value="" placeholder="Password" required>
                                <i class="bi bi-eye-slash js-toggle-password" style="cursor: pointer; margin-left: -30px;"></i>
                                <label for="password" class="form-label">Wachtword</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-grid">
                                <button class="btn bsb-btn-2xl btn-primary" type="submit">Inloggen</button>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-grid">
                                <a class="btn bsb-btn-2xl btn-primary" type="submit" href="/signup">Account aanmaken</a>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="row">
                    <div class="col-12">
                        <p class="mt-5 mb-4">Of inloggen met</p>
                        <div class="d-flex gap-3">
                            <a href="#" class="btn btn-lg btn-outline-danger">
                                <i class="bi bi-google"></i>
                            </a>
                            <a href="#" class="btn btn-lg btn-outline-primary">
                                <i class="bi bi-facebook"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>