@page
@model SeniorConnect.Pages.activity.AddActivityModel
@{
    ViewData["Title"] = "Create Activity";
}

@section CustomJs{
    <script src="~/js/addActivity.js" asp-append-version="true"></script>
}
<div class="row justify-content-center mt-5">
    <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-8">
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-3 p-md-4 p-xl-5">
                <div class="row">
                    <div class="col-12">
                        <div class="mb-2">
                            <h2>Activiteit toevoegen</h2>
                        </div>
                    </div>
                </div>
                <form method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="addActivityRequestDto.Title" class="control-label">Titel</label>
                        <input asp-for="addActivityRequestDto.Title" name="Title" type="text" class="form-control" />
                        <span asp-validation-for="addActivityRequestDto.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="addActivityRequestDto.Description" class="control-label">Beschrijving</label>
                        <textarea asp-for="addActivityRequestDto.Description" name="Description" class="form-control"></textarea>
                        <span asp-validation-for="addActivityRequestDto.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="addActivityRequestDto.Image" class="control-label">Afbeelding</label>
                        <input asp-for="addActivityRequestDto.Image" name="Image" type="text" class="form-control" />
                        <span asp-validation-for="addActivityRequestDto.Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="addActivityRequestDto.Date" class="control-label">Datum & tijd</label>
                        <input asp-for="addActivityRequestDto.Date" name="Date" class="form-control" />
                        <span asp-validation-for="addActivityRequestDto.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="addActivityRequestDto.Place" class="control-label">Adres</label>
                        <select asp-for="addActivityRequestDto.Place" class="form-select" id="js-search-activity-location" name="Place"></select>
                        <span asp-validation-for="addActivityRequestDto.Place" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="addActivityRequestDto.MaxParticipants" class="control-label">Max deelnemers</label>
                        <input asp-for="addActivityRequestDto.MaxParticipants" name="MaxParticipants" type="number" class="form-control" min="1" max="100"/>
                        <span asp-validation-for="addActivityRequestDto.MaxParticipants" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="addActivityRequestDto.Awards" class="control-label">Prijs</label>
                        <input asp-for="addActivityRequestDto.Awards" name="Awards" type="text" class="form-control" />
                        <span asp-validation-for="addActivityRequestDto.Awards" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Aanmaken" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
