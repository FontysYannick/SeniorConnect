@page
@model SeniorConnect.Pages.calendar.CalendarModel
@{
}

<h1 class="mb-4">Mijn agenda</h1>

@foreach (var Activity in Model.Activitys)
{
    <div class="card mb-3 w-100" onclick="window.location='/activity/ActivityDetail?id=@Activity.ActivityId'">
        <div class="row g-0">
            <div class="col-md-3">
                <img src="@Activity.Image" class="w-100 h-100 rounded-start" alt="..." />
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h5 class="card-title">@Activity.Title</h5>
                    <p class="card-text text-truncate">@Activity.Description</p>
                    <div class="border-top w-100 d-flex">
                        <div class="d-flex gap-5 mt-3">
                            <div class="d-flex gap-2 mb-3">
                                <i class="bi bi-people-fill"></i>
                                <div>
                                    <p class="mb-0">Deelnemers</p>
                                    <p class="mb-0">@Activity.MaxParticipants</p>
                                </div>
                            </div>
                            <div class="d-flex gap-2 mb-3">
                                <i class="bi bi-calendar-event"></i>
                                <div>
                                    <p class="mb-0">Datum/Tijd</p>
                                    <p class="mb-0">@Activity.Date</p>
                                </div>
                            </div>
                            <div class="d-flex gap-2">
                                <i class="bi bi-geo-alt"></i>
                                <div>
                                    <p class="mb-0">Plaats</p>
                                    <p class="mb-0">@Activity.Place</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}